@model Imagination_Portal_2._0.Models.ApplicationUser

@{
    ViewBag.Title = "Add To Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add To Role</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.UserName, ViewBag.users as IEnumerable<SelectListItem>, "Select a User")
                
                @*@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ManageAdmins")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
