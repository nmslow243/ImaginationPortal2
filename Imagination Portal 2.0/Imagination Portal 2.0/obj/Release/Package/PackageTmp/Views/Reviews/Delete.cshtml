@model Imagination_Portal_2._0.Models.Review

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Review</h4>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            @Html.DisplayNameFor(model => model.Comment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Score)
        </dt>

        <dd>
            <div class="selectrating">
                @Html.RadioButtonFor(m => m.Score, "5", htmlAttributes: new { @id = "Score5" })<label for="Score5" title="Great">5 stars</label>
                @Html.RadioButtonFor(m => m.Score, "4", htmlAttributes: new { @id = "Score4" })<label for="Score4" title="Good">4 stars</label>
                @Html.RadioButtonFor(m => m.Score, "3", htmlAttributes: new { @id = "Score3" })<label for="Score3" title="Okay">3 stars</label>
                @Html.RadioButtonFor(m => m.Score, "2", htmlAttributes: new { @id = "Score2" })<label for="Score2" title="Not Good">2 stars</label>
                @Html.RadioButtonFor(m => m.Score, "1", htmlAttributes: new { @id = "Score1" })<label for="Score1" title="Bad">1 stars</label>
            </div>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
