@model Imagination_Portal_2._0.Models.CreateFinal

@{
    ViewBag.Title = "Create Solution";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    
</script>
<h1>Create Solution</h1>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h6>This is the final step to give your solution a title and pick the challenge you are solving.</h6>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tags, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tags, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tags, "", new { @class = "text-danger" })
            </div>
        </div>

        @if (ViewBag.IssueId > 0)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.IssueId, htmlAttributes: new { @class = "control-label col-md-2", @style = "display: none;" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IssueId, new { htmlAttributes = new { @class = "form-control", @style = "display: none;", @Value = ViewBag.IssueId } })
                    @Html.ValidationMessageFor(model => model.IssueId, "", new { @class = "text-danger" })
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                @Html.LabelFor(model => model.IssueId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.IssueId, new { htmlAttributes = new { @class = "form-control" } })*@
                    
                    @Html.DropDownListFor(model => model.IssueId, ViewBag.issues as IEnumerable<SelectListItem>, "Select an Issue" )                       
                    @Html.ValidationMessageFor(model => model.IssueId, "", new { @class = "text-danger" })
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
