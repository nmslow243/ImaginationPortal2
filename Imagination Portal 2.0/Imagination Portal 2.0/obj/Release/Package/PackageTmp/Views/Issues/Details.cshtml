@model Imagination_Portal_2._0.Models.Issue

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Issue</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Priority)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Priority)
        </dd>

    </dl>
    @if (Model.Solutions.Count > 0) { 
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Solutions.ElementAt(0).Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Solutions.ElementAt(0).Description)
                </th>
                <th></th>
            </tr>

            @foreach (var solution in Model.Solutions)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => solution.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => solution.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = solution.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = solution.Id }) |
                        @Html.ActionLink("Add Review", "Create", "Reviews", new { id = solution.Id }, new { })
                    </td>
                </tr>
                if (solution.Reviews.Count > 0)
                {
                    <tr>
                        <th>Reviews</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Solutions.ElementAt(0).Reviews.ElementAt(0).Score)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Solutions.ElementAt(0).Reviews.ElementAt(0).Comment)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Solutions.ElementAt(0).Reviews.ElementAt(0).UserName)
                        </th>
                        <th></th>
                    </tr>

                    foreach (var review in solution.Reviews)
                    {
                        <tr>
                            <td></td>
                            <td>
                                @Html.DisplayFor(modelItem => review.Score)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => review.Comment)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => review.UserName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = review.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = review.Id })
                            </td>
                        </tr>

                    }
                }
            }

        </table>
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
